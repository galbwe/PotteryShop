<% include ./partials/header %>

<div class="container-fluid">

  <section id="showPageHeader" class="row page-header">
    <h1 class="header-text display-1 text-center">
      <%=piece.name%>
    </h1>
  </section>

  <section class="row">
    <div class="col-md-6" id="piecePhotos">
      <div id="pieceCarousel" class="carousel" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
              <img class="img rounded d-block m-auto" src="<%=piece.photos[0]%>" alt="image unavailable">
          </div>

          <%piece.photos.slice(1).forEach(function(photo){%>
            <div class="carousel-item">
                <img class="img rounded d-block m-auto" src='<%=photo%>' alt="image unavailable">
            </div>
          <%})%>
        </div>
        <a class="carousel-control-prev" href="#pieceCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#pieceCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div>
    </div>

    <div class="col-md-6" id="pieceInfo">

      <p class="text-left">
          <strong>Description: </strong><%=piece.description%>
      </p>
      <p>
          <strong>Price: </strong> $<%=piece.priceDollars + ".00"%>
      </p>
      <p class="text-left">
          <%=piece.qtyAvailable%> currently available
      </p>
      <div class="row justify-content-center">
        <div class="order-form col-10">
          <h3 class="display-5 rounded">Place Order</h3>
          <form>
              <input placeholder="Quantity"/>
              <button class="btn btn-success">Add To Cart</button>
          </form>
        </div>
      </div>

    </div>
  </section>

<!--- script to control the height of the header section --->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/category-header.js"></script>

<% include ./partials/footer %>
